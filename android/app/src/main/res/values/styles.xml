<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.ReactNative.AppCompat.Light.NoActionBar.FullScreen">
    <!-- <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar"> -->
       <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowDisablePreview">false</item>
      <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
     <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>
  <!-- Item selected font. -->
    <style name="SpinnerItem" parent="Theme.ReactNative.AppCompat.Light.NoActionBar.FullScreen">
      <item name="android:textSize">14dp</item>
    </style>

    <!-- Dropdown options font. -->
    <style name="SpinnerDropDownItem" parent="Theme.ReactNative.AppCompat.Light.NoActionBar.FullScreen">
      <item name="android:paddingHorizontal">30dp</item>
      <item name="android:paddingTop">15dp</item>
       <item name="android:textSize">14dp</item>
       <item name="android:background">@drawable/pickeritem</item>
    </style>
</resources>
